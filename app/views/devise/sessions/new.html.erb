<div class="login-form">

  <h2 class="mb-4 mt-4">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
    <div class="mb-3">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
    </div>

    <div class="mb-4">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control form-control-lg" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Login", class: "btn btn-primary btn-lg btn-block rounded-pill myBtn" %>
    </div>
  <% end %>

  <div class="links mb-2 mt-2">
    <%= render "devise/shared/links" %>
  </div>

</div>