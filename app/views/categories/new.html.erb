<header>
    <div>
        <%= link_to image_tag('back.png'), categories_path, id: "back-icon" %>
    </div>
    <h2>
        Categories
    </h2>
    <div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
</header>

<div class="addCategory">

  <%= form_for(Category.new, url: categories_path) do |f| %>
    <div class="field mb-4 ">
        <%= f.text_field :name, placeholder: "Name", autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
    </div>

    <div class="field mb-4">
      <%= f.file_field :icon %>
    </div>

    <div class="actions">
      <%= f.submit "Create Category", class: "btn btn-primary btn-lg btn-block splashBtn" %>
    </div>
  <% end %>

</div>