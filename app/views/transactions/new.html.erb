<header>
    <div>
      <%= link_to image_tag('back.png'), category_transactions_path(category_id: @category.id), id: "back-icon" %>
    </div>
    <h2>
        Transactions
    </h2>
    <div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
</header>

<%= form_for(Transaction.new, url: category_transactions_path(category_id: @category.id)) do |f| %>
   <div class="field mb-4 ">
        <%= f.text_field :name, placeholder: "Name", autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
    </div>

  <div class="field mb-3">
    <%= f.number_field :amount, placeholder:"Amount", autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
  </div>
  
  <div class="field">
    <%= f.label :category %><br />
    <%= f.collection_select :category_id, current_user.categories, :id, :name, { class: "options form-control form-control-lg", selected: @category.id } %>
  </div>

  <div class="actions">
      <%= f.submit "Add Transaction", class: "btn btn-primary btn-lg btn-block splashBtn" %>
  </div>
<% end %>