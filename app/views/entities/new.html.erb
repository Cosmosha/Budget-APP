<header>
    <div>
        <%= link_to image_tag('back.png'), group_entities_path(group_id: @group.id), id: "back-icon" %>
    </div>
    <h2>
        Entities
    </h2>
    <div>
        <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    </div>
</header>

<%= form_for(Entity.new, url: group_entities_path(group_id: @group.id)) do |f| %>
    <div class="field mb-4 ">
        <%= f.text_field :name, placeholder: "Name", autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
    </div>

    <div class="field mb-3">
        <%= f.number_field :amount, placeholder:"Amount", autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
    </div>

    <div class="field">
        <%= f.label :group %><br />
        <%= f.collection_select :group_id, current_user.groups, :id, :name, { class: "options form-control form-control-lg", selected: @group.id } %>
    </div>

    <div class="actions">
        <%= f.submit "Add Entity", class: "btn btn-primary btn-lg btn-block splashBtn" %>
    </div>
<% end %>
